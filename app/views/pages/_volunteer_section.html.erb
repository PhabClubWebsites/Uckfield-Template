<style>
    .home-row {    
        display: flex;
        align-items: flex-start;
        width: 100%;
        padding: 0px 0px 40px 0px;
    }    
    .home-header {
        flex: 1 1 30%;
        padding-right: 20px;
    }
    .home-content {
        flex: 1 1 70%;
        border-left: 4px solid #56A644;
        padding-left: 30px;
        padding-top: 10px;
        font-size: 18px;
        
        
    }
    .home-content img {
        display: block;
        max-width: 400px;
        margin: 20px 0px;
        border-radius: 16px;
    }
    
    .volunteer-row:not(:last-child) {
        padding: 0px 0px 40px 0px;
    }
    
    @media (max-width: 769px) {
        .home-row {    
            flex-wrap: wrap;
        }    
        .home-content,
        .home-header {
            flex: 1 1 100% !important;
            padding-bottom: 30px;
        }
        .home-content {
            margin-left: 30px;
        }
        
        .home-header h2 {
            margin-top: 0 !important;
        }
    }
</style>
<div class="home-row" id="volunteers">
    <% if !volunteers.blank? %>
        <div class="home-header">
            <h2 style="color: #56A644;">Our Volunteers</h2>
        </div>
        <div class="home-content">
            <% volunteers.each_with_index do |volunteer, i| %>
                <div class="volunteer-row">
                    <% if !volunteer.img_one.blank? %>
                        <%= image_tag(volunteer.img_one.url(:medium)) %>
                    <% end %>
                    <% if !volunteer.title.blank? %>
                        <h4 class="address-title"><%= volunteer.title %></h4>
                    <% end %>
                    <% if !volunteer.content_one.blank? %>
                        <%= sanitize volunteer.content_one %>
                    <% end %>
                    <% if admin_signed_in? %>
                        <%= render partial: "pages/admin_cta_bar", locals: { obj: volunteer, padding_vertical: "0px" } %> 
                    <% end %>
                </div>
                <% unless i === volunteers.size-1 %>
                    <hr style="margin-bottom: 40px;"></hr>
                <% end %>
            <% end %>
        </div>
    <% end %>
</div>