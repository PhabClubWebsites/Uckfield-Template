<style>
    .home-row {    
        display: flex;
        align-items: flex-start;
        width: 100%;
        padding: 0px 0px 40px 0px;
    }    
    .home-header {
        flex: 1 1 30%;
        padding-right: 20px;
    }
    .home-content {
        flex: 1 1 70%;
        border-left: 4px solid #56A644;
        padding-left: 30px;
        padding-top: 10px;
        font-size: 18px;
    }
    .home-content img {
        display: block;
        margin: 0 auto;
        padding: 20px;
        border-radius: 16px;
    }
    
    .home-content a {
        color: #56A644 !important;
    }
    
    @media (max-width: 769px) {
        .home-row {    
            flex-wrap: wrap;
        }    
        .home-content,
        .home-header {
            flex: 1 1 100% !important;
            padding-bottom: 30px;
        }
        .home-content {
            margin-left: 30px;
        }
        
        .home-header h2 {
            margin-top: 0 !important;
        }
    }
</style>
<div class="home-row">
    <div class="home-header" id="<%= handlise(obj.title) %>">
        <h2 style="color: #56A644;"><%= obj.title %></h2>
    </div>
    <div class="home-content">
        <%= sanitize obj.content_one %>
        <% if !obj.img_one.blank? %>
            <%= image_tag(obj.img_one.url(:medium)) %>
        <% end %>
        <% if !obj.content_two.blank? %>
            <%= sanitize obj.content_two %>
        <% end %>
        <% if !obj.img_two.blank? %>
            <%= image_tag(obj.img_two.url(:medium)) %>
        <% end %>
        <% if !obj.content_three.blank? %>
            <%= sanitize obj.content_three %>
        <% end %>
        <% if !obj.img_three.blank? %>
            <%= image_tag(obj.img_three.url(:medium)) %>
        <% end %>
        <% if admin_signed_in? %>
            <%= render partial: "pages/admin_cta_bar", locals: { obj: obj, padding_vertical: "0px" } %> 
        <% end %>
    </div>
</div>