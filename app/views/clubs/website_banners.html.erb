<script>
$(document).on("turbolinks:load", function() {
    $("body").on("click", ".display_url", function() {
      var container = $(this).parents("div[class^='related-block-']");
      container.find(".show_pdf, .related-cta-row").hide();
      container.find(".show_url, .switch_option").show();
    })
    $("body").on("click", ".display_pdf", function() {
      var container = $(this).parents("div[class^='related-block-']");
      container.find(".show_url, .related-cta-row").hide();
      container.find(".show_pdf, .switch_option").show();
      container.find("input[type='text']").val("");
    })
    $("body").on("click", ".switch_option", function() {
      var container = $(this).parents("div[class^='related-block-']");
      container.find(".related-cta-row").show();
      container.find(".show_pdf, .show_url, .switch_option").hide();
    });
});
</script>